#!/bin/bash

if [ "$1" == "-i" ]; then
	tllocalmgr install $2
	sudo texhash
elif [ "$2" == "-o" ]; then
	gio open $(echo "$1" | cut -d'.' -f 1).pdf
else
	/usr/bin/lualatex -shell-escape -interaction=nonstopmode -synctex=1 -file-line-error "$1"
	/usr/bin/lualatex -shell-escape -interaction=nonstopmode -synctex=1 -file-line-error "$1"
	rm *.aux
	rm *.log
	rm *.out
	rm *.toc
	rm latex.py
	rm *.synctex.gz
	rm *.py.out
	rm *.py.err
	rm $(echo "$1" | cut -d'.' -f 1).py

	if [ "$2" == "-co" ]; then
		gio open $(echo "$1" | cut -d'.' -f 1).pdf
	fi
fi